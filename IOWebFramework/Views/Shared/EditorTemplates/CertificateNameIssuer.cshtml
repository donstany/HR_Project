@model int

@{
    var fieldName = ViewData.TemplateInfo.HtmlFieldPrefix.Replace(".", "_") + "_certificateNameIssuer";
}

<div class="form-group">
    <label asp-for="@Model" class="control-label"></label>
    <input id="@fieldName" class="form-control" />
    <input asp-for="@Model" type="hidden" />
    <span asp-validation-for="@Model" class="text-danger"></span>
</div>

<script>
    if (!!'@Model') {
        loadAutoCompleteValue('@Model');
    }

    $.widget('custom.autocomplete_certificateNameIssuer', $.ui.autocomplete, {
        _renderMenu: function _renderMenu(ul, items) {
            var that = this;
            var category = '';
            $.each(items, function (index, item) {
                if (item.category !== category) {
                    ul.append('<li class="ui-autocomplete-category ui-state-disabled" aria-label="' + item.category + '">' + item.category + '</li>');
                    category = item.category;
                }
                that._renderItemData(ul, item);
            });
        }
    });

    window.location_storage_certificateNameIssuer = window.location_storage_certificateNameIssuer || {};

    $('#@fieldName').autocomplete_certificateNameIssuer({
        minLength: 2,
        delay: 0,
        source: function source(request, response) {
            var _window = window,
                location_storage = _window.location_storage_certificateNameIssuer;

            if (!!location_storage[request.term]) return response(location_storage[request.term]);
            $.get('@Url.Action("SearchCertificateNameIssuer", "Ajax", new { area = "", query = "666" })'.replace('666', encodeURIComponent(request.term))).done(function (success) {
                location_storage[request.term] = success.data;
                return response(success.data);
            }).fail(function (errors) {
                console.log(errors);
            });
        },
        select: function select(event, ui) {
            ui.item.value = ui.item.label + ', ' + ui.item.category;
            var input_hidden = event.target.parentElement.querySelector('input[type="hidden"]');
            input_hidden.value = ui.item.id;
        }
    }).change(function () {
        var input = this;
        if (!input.value || input.value < 2) {
            var input_hidden = input.parentElement.querySelector('input[type="hidden"]');
            input_hidden.value = '';
        }
    }).blur(function () {
        var input = this;
        if (!input.value || input.value < 2) {
            var input_hidden = input.parentElement.querySelector('input[type="hidden"]');
            input_hidden.value = '';
        }
    });

    function loadAutoCompleteValue(id) {
        $.get('@Url.Action("GetCertificateNameIssuer", "Ajax", new { area = "", id = "666" })'.replace('666', id))
            .done(function (data) {
                if (data.label === null && data.category === null) {
                    $('#@fieldName').val('');
                } else if (data.label !== null && data.category === '') {
                    $('#@fieldName').val(data.label);
                } else {
                    $('#@fieldName').val(data.label + ', ' + data.category);
                }
            }).fail(function (errors) {
                console.log(errors);
            });
    }
</script>