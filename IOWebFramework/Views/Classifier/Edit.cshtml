@model IOWebFramework.Core.Models.Classifier.ClassifierViewModel

@{
    ViewData["Title"] = "Класификатор";
}

    <div class="row">
        <div class="col-lg-12">
            <div class="card-outline card-primary" style="margin-bottom:20px">
                @foreach (var step in Model.BreadcrumbInfo)
                {
                    @if (step.Id != 0)
                    {
                        <a asp-action="Edit" asp-route-classifierId="@step.Id">@step.Title</a>
                    }
                    else
                    {
                        <a asp-action="Index">@step.Title</a>
                    }

                    @if (step != Model.BreadcrumbInfo.Last())
                    {
                        <span style="margin-left:10px; margin-right:10px">/</span>
                    }
                }
            </div>
        </div>
    </div>

<div class="card">
    <div class="card-body">

        <form asp-action="Edit" method="post">
            <div id="saveContainer">
                @await Html.PartialAsync("_SaveFormContent", "#saveContainer")
                <div class="row">
                    <div class="col-md-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.ParentId)
                        @Html.EditorFor(m => m.Name)
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-6" style="margin-top: 12px; align-self: center">
                        @Html.EditorFor(m => m.IsActive, "Toggle")
                    </div>
                    @*@if (!Model.HasChildren)
                        {
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.ListBoxFor(m => m.Options, new SelectList(ViewBag.ActivityOptions, "Value", "Text"), new { id = "activity-options-select", multiple = "multiple", @class = "form-control" })
                                </div>
                            </div>
                        }*@

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" value="Запис" class="btn btn-success" />
                            @if (Model.ParentId == Model.Id)
                            {
                                <a asp-action="Index" class="btn btn-danger">Назад</a>
                            }
                            else
                            {
                                <a asp-action="Edit" asp-route-classifierId="@Model.ParentId" class="btn btn-danger">Назад</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.Id > 0)
{
    @if (ViewBag.HideTable)
    {

        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="col-md-12 text-right pb-15">
                        <a asp-action="Add" asp-route-parentId="@Model.Id" class="btn btn-success">
                            <i class="fa fa-plus"></i>
                            Добави
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @if (Model.Id == Model.ParentId)
                        {
                            <h3>Професионални направления</h3>
                        }
                        else
                        {
                            <h3>Специалности</h3>
                        }
                        <table id="classifierListTable" class="table table-hover table-striped"></table>
                    </div>
                </div>

            </div>
        </div>
    }
    @section scripts {
        <script>
        $(function () {
            var table = $('#classifierListTable').DataTable({
                ajax: {
                    "url": "@Url.Action("ClassifierListData", "Classifier")",
                    data: function (d) {
                        d.parentId = @Model.Id;
                    },
                    "type": "POST",
                    "datatype": "json"
                },
                columns: [
                    {
                        name: 'name',
                        data: 'name',
                        title: 'Име',
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'isActive',
                        data: "isActive",
                        title: 'Активен',
                        sortable: true,
                        searchable: false,
                        className: "text-center",
                        "render": function (value) {
                            return value ? 'Да' : 'Не';
                        }
                    },
                    {
                        name: 'actions',
                        data: "id",
                        title: "",
                        sortable: false,
                        searchable: false,
                        className: "text-center",
                        "render": function (value) {
                            return TemplateToHtml('#templateEdit', value); // value will be binded to {{this}} in  Handle bar template, in our case value is Id.
                        }
                    }
                ]
            });

            @*$('#activity-options-select').multiSelect({
                selectableHeader: '<label>@Localizer["OptionList"]</label>',
                selectionHeader: '<label>@Localizer["CurrentOptions"]</label>'
            });*@
        });
        </script>

        <script id="templateEdit" type="text/x-handlebars-template">
            <a href="@Url.Action("Edit", "Classifier")?classifierId={{this}}" class="btn btn-warning btn-sm" title="Редакция"><i class="fa fa-edit"></i><span class="hidden-sm hidden-xs"> Редакция</span></a>
        </script>
    }
}
