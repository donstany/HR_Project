@using IOWebFramework.Infrastructure.Data.Models.Identity
@using Microsoft.AspNetCore.Identity
@using IOWebFramework.Core.Models.Account

@inject SignInManager<ApplicationUser> SignInManager
@model LoginViewModel
@{
    Layout = String.Empty;
    ViewBag.Title = "Вход в системата";
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewData["Title"]</title>

    @{
        await Html.RenderPartialAsync("_StylesPartial");
    }
    <link href="~/lib/adminlte/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />
    <script src="~/lib/adminlte/plugins/jquery/jquery.min.js"></script>
    <script src="~/lib/adminlte/plugins/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/adminlte/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script>
        window.fadeIn = function (obj) {
            $(obj).fadeIn(2000);
        }
    </script>
</head>
<body class="hold-transition login-page">
    <img id="logo-img" onload="fadeIn(this)" src="~/img/io_logo-1.png" alt="Information Services logo" style="display:none;" />
    <div class="login-box">
        <div class="login-logo">
            HR PROJECT
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <hr class="login-hr"/>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group has-feedback">
                    <input asp-for="UserName" class="form-control" placeholder="Потребителско име от Активната Директория" />
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <input asp-for="Password" class="form-control" placeholder="Парола от Активната Директория" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <button type="submit" class="btn btn-primary btn-block btn-flat"><i class="fas fa-sign-in-alt"></i> Вход</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>

</body>
